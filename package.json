{
  "name": "@pavlovcik/scraper",
  "license": "MIT",
  "author": {
    "name": "アレクサンダー.eth"
  },
  "scripts": {
    "preinstagram:shuffle": "rm cache/SingletonLock",
    "instagram:shuffle": "yarn start $(awk 'BEGIN {srand()} {print rand() \"\t\" $0}' ./research/targets-following.txt | sort -n | cut -f2-)",
    "instagram:login": "yarn start https://www.instagram.com/accounts/login/",
    "cache:clear": "cd cache && git reset --hard && git clean -fd && cd ..",
    "start": "tsx src --chromium=\"--user-data-dir=cache\" --table sandbox",
    "start:no-sandbox": "tsx src --chromium=\"--user-data-dir=cache --no-sandbox\" --table sandbox --executablePath /home/runner/work/scraper-parent-test/scraper-parent-test/chrome-linux/chrome",
    "test:ci": "tsx src/ https://github.com/pavlovcik https://github.com/transitive-bullshit",
    "utils:database-export": "tsx src/utils/export-database",
    "prepare": "husky install",
    "format": "run-s format:*",
    "format:prettier": "prettier --write src",
    "format:eslint": "eslint . --ext .ts --cache --fix --plugin tsc --rule 'tsc/config: [2, { configFile: ./tsconfig.json }]'",
    "_dev:ci": "nodemon -e .yml --exec \"git commit -am 'fix: ci' && git push\""
  },
  "lint-staged": {
    "*.{ts}": "prettier --write"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/follow-redirects": "^1.14.1",
    "@types/node": "^18.14.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.8.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "follow-redirects": "^1.15.2",
    "husky": "^8.0.3",
    "image-type": "^5.2.0",
    "json2csv": "^6.0.0-alpha.2",
    "lint-staged": "^13.1.2",
    "node-fetch": "^3.3.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "puppeteer": "^19.7.1",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "unzip-crx": "^0.2.0"
  }
}
